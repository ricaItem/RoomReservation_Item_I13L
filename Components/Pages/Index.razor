@page "/"

<div class="landing text-center mt-5">
    <h1 class="display-4 fw-bold">Welcome to RoomEase</h1>
    <p class="lead text-secondary">Manage rooms and reservations efficiently.</p>

    <button class="btn btn-primary mt-4" @onclick="GoToLogin">Go to Login</button>
</div>

@code {
    [Inject] NavigationManager NavigationManager { get; set; } = default!;

    private void GoToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }
}
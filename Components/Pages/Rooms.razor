@code {
    private RoomModel roomModel = new();
    private List<RoomModel> roomList = new();
    private List<RoomModel> filteredRoomList = new();
    private List<RoomModel> archivedRoomList = new();
    private string searchQuery = string.Empty;
    private string statusFilter = string.Empty;
    private bool showAddModal = false;
    private bool showEditModal = false;
    private int nextId = 1;
    private bool showConfirmDialog = false;
    private string confirmAction = string.Empty;
    private string confirmMessage = string.Empty;
    private RoomModel? roomToArchive;

    protected override void OnInitialized()
    {
        filteredRoomList = roomList;
    }

    private void OpenAddModal()
    {
        roomModel = new RoomModel();
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        roomModel = new RoomModel();
    }

    private void OpenEditModal(RoomModel room)
    {
        roomModel = new RoomModel
        {
            Id = room.Id,
            RoomName = room.RoomName,
            RoomType = room.RoomType,
            Capacity = room.Capacity,
            Status = room.Status,
            Description = room.Description,
            CreatedAt = room.CreatedAt,
            UpdatedAt = room.UpdatedAt
        };
        showEditModal = true;
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        roomModel = new RoomModel();
    }

    private void ConfirmAddRoom()
    {
        if (string.IsNullOrEmpty(roomModel.RoomName) || string.IsNullOrEmpty(roomModel.RoomType))
        {
            return;
        }
        confirmAction = "add";
        confirmMessage = $"Are you sure you want to add a new room: {roomModel.RoomName}?";
        showConfirmDialog = true;
    }

    private void SaveRoom()
        {
            roomModel.Id = nextId++;
        roomModel.CreatedAt = DateTime.Now;
        roomModel.UpdatedAt = DateTime.Now;
            roomList.Add(new RoomModel
            {
                Id = roomModel.Id,
            RoomName = roomModel.RoomName,
                RoomType = roomModel.RoomType,
            Capacity = roomModel.Capacity,
            Status = roomModel.Status,
            Description = roomModel.Description,
            CreatedAt = roomModel.CreatedAt,
            UpdatedAt = roomModel.UpdatedAt
        });

        CloseAddModal();
        FilterRooms();
    }

    private void ConfirmUpdateRoom()
    {
        if (string.IsNullOrEmpty(roomModel.RoomName) || string.IsNullOrEmpty(roomModel.RoomType))
        {
            return;
        }
        confirmAction = "update";
        confirmMessage = $"Are you sure you want to update room: {roomModel.RoomName}?";
        showConfirmDialog = true;
    }

    private void UpdateRoom()
        {
            var existing = roomList.FirstOrDefault(r => r.Id == roomModel.Id);
            if (existing != null)
            {
            existing.RoomName = roomModel.RoomName;
                existing.RoomType = roomModel.RoomType;
                existing.Capacity = roomModel.Capacity;
            existing.Status = roomModel.Status;
            existing.Description = roomModel.Description;
            existing.UpdatedAt = DateTime.Now;
        }

        CloseEditModal();
        FilterRooms();
    }

    private void ViewRoomDetails(RoomModel room)
    {
        OpenEditModal(room);
    }

    private void ConfirmArchiveRoom(RoomModel room)
    {
        roomToArchive = room;
        confirmAction = "archive";
        confirmMessage = $"Are you sure you want to archive room: {room.RoomName}? This action cannot be undone.";
        showConfirmDialog = true;
    }

    private void ArchiveRoom(RoomModel room)
    {
        roomList.Remove(room);
        archivedRoomList.Add(room);
        FilterRooms();
    }

    private void ExecuteConfirmedAction()
    {
        showConfirmDialog = false;
        switch (confirmAction)
        {
            case "add":
                SaveRoom();
                break;
            case "update":
                UpdateRoom();
                break;
            case "archive":
                if (roomToArchive != null)
                {
                    ArchiveRoom(roomToArchive);
                    roomToArchive = null;
                }
                break;
        }
        confirmAction = string.Empty;
        confirmMessage = string.Empty;
    }

    private bool IsDestructiveAction()
    {
        return confirmAction == "archive" || confirmAction == "delete";
    }

    private void CancelConfirmDialog()
    {
        showConfirmDialog = false;
        confirmAction = string.Empty;
        confirmMessage = string.Empty;
        roomToArchive = null;
    }

    private void FilterRooms()
    {
        filteredRoomList = roomList.Where(room =>
            (string.IsNullOrEmpty(searchQuery) ||
             room.RoomName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
             room.RoomType.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(statusFilter) || room.Status == statusFilter)
        ).ToList();
    }

    private void ClearFilters()
    {
        searchQuery = string.Empty;
        statusFilter = string.Empty;
        FilterRooms();
    }

    public class RoomModel
    {
        public int Id { get; set; }
        public string RoomName { get; set; } = string.Empty;
        public string RoomType { get; set; } = string.Empty;
        public int Capacity { get; set; }
        public string Status { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public DateTime CreatedAt { get; set; } = DateTime.Now;
        public DateTime UpdatedAt { get; set; } = DateTime.Now;
    }
}


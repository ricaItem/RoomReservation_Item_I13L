                        <label class="form-label">
                            <i class="bi bi-search me-2"></i>
                            Search Rooms
                        </label>
                        <div class="search-wrapper">
                            <i class="bi bi-search search-icon"></i>
                            <InputText class="form-control-modern search-input" @bind-Value="searchQuery" @oninput="FilterRooms" placeholder="Search by room name or type..." />
                        </div>
                    </div>
            </div>
            <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="bi bi-funnel me-2"></i>
                            Filter by Status
                        </label>
                        <InputSelect class="form-control-modern" @bind-Value="statusFilter" @onchange="FilterRooms">
                            <option value="">All Status</option>
                            <option value="Available">Available</option>
                            <option value="Not Available">Not Available</option>
                        </InputSelect>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn-modern btn-clear w-100" type="button" @onclick="ClearFilters" title="Clear Filters">
                            <i class="bi bi-x-circle me-2"></i>
                            Clear
                        </button>
                    </div>
            </div>
            </div>
            </div>
        </div>

    <div class="rooms-card">
        <div class="rooms-card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="rooms-card-title">
                    <i class="bi bi-list-ul me-2"></i>
                    Room List
                    <span class="badge-modern">@filteredRoomList.Count</span>
                </h3>
            </div>
        </div>
        <div class="rooms-card-body">
            @if (filteredRoomList.Count == 0)
            {
                <div class="empty-state">
                    <i class="bi bi-inbox"></i>
                    <h4>No rooms found</h4>
                    <p>@(roomList.Count == 0 ? "Get started by adding your first room." : "Try adjusting your search or filter criteria.")</p>
</div>
            }
            else
            {
                <div class="table-wrapper">
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>Room ID</th>
                                <th>Name</th>
                <th>Type</th>
                <th>Capacity</th>
                                <th>Status</th>
                                <th>Description</th>
                                <th>Created At</th>
                                <th>Updated At</th>
                                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
                            @foreach (var room in filteredRoomList)
            {
                <tr>
                                    <td><strong>#@room.Id</strong></td>
                                    <td>@room.RoomName</td>
                                    <td>
                                        <span class="badge-type">@room.RoomType</span>
                                    </td>
                                    <td>
                                        <span class="capacity-badge">
                                            <i class="bi bi-people me-1"></i>
                                            @room.Capacity
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge @(room.Status == "Available" ? "status-available" : "status-unavailable")">
                                            <i class="bi bi-circle-fill me-1"></i>
                                            @room.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="description-text" title="@room.Description">
                                            @(string.IsNullOrEmpty(room.Description) ? "-" : (room.Description.Length > 50 ? room.Description.Substring(0, 50) + "..." : room.Description))
                                        </span>
                                    </td>
                                    <td>@room.CreatedAt.ToString("MM/dd/yyyy")</td>
                                    <td>@room.UpdatedAt.ToString("MM/dd/yyyy")</td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn-action btn-view" @onclick="() => ViewRoomDetails(room)" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn-action btn-edit" @onclick="() => OpenEditModal(room)" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn-action btn-delete" @onclick="() => ConfirmArchiveRoom(room)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
            }
        </div>
    </div>
</div>


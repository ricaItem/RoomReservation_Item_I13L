@page "/rooms"

<div class="rooms-container">
    <div class="rooms-header mb-4">
        <div>
            <h1 class="rooms-title">Room Management</h1>
            <p class="rooms-subtitle">Create, update, and manage your room inventory</p>
        </div>
    </div>

    <div class="rooms-card mb-4">
        <div class="rooms-card-header">
            <h3 class="rooms-card-title">
                <i class="bi bi-plus-circle me-2"></i>
                @(roomModel.Id == 0 ? "Add New Room" : "Update Room")
            </h3>
        </div>
        <div class="rooms-card-body">
            <EditForm Model="@roomModel" OnValidSubmit="SaveRoom">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-summary" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-door-closed me-2"></i>
                                Room Name <span class="text-danger">*</span>
                            </label>
                            <InputText class="form-control-modern" @bind-Value="roomModel.RoomName" placeholder="Enter room name" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-tags me-2"></i>
                                Room Type <span class="text-danger">*</span>
                            </label>
                            <InputSelect class="form-control-modern" @bind-Value="roomModel.RoomType">
                                <option value="">Select room type</option>
                                <option value="Conference Room">Conference Room</option>
                                <option value="Meeting Room">Meeting Room</option>
                                <option value="Training Room">Training Room</option>
                                <option value="Event Hall">Event Hall</option>
                                <option value="Workspace">Workspace</option>
                                <option value="Lounge">Lounge</option>
                                <option value="Office">Office</option>
                            </InputSelect>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-people me-2"></i>
                                Capacity <span class="text-danger">*</span>
                            </label>
                            <InputNumber class="form-control-modern" @bind-Value="roomModel.Capacity" placeholder="Enter capacity" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-circle-fill me-2"></i>
                                Status <span class="text-danger">*</span>
                            </label>
                            <InputSelect class="form-control-modern" @bind-Value="roomModel.Status">
                                <option value="">Select status</option>
                                <option value="Available">Available</option>
                                <option value="Not Available">Not Available</option>
                            </InputSelect>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-hash me-2"></i>
                                Room ID
                            </label>
                            <InputNumber class="form-control-modern" @bind-Value="roomModel.Id" disabled />
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-file-text me-2"></i>
                                Description
                            </label>
                            <InputTextArea class="form-control-modern" @bind-Value="roomModel.Description" rows="3" placeholder="Enter room description (optional)" />
                        </div>
                    </div>
                </div>

                <div class="form-actions mt-4">
                    @if (roomModel.Id == 0)
                    {
                        <button class="btn-modern btn-primary-modern" type="submit">
                            <i class="bi bi-plus-circle me-2"></i>
                            Add Room
                        </button>
                    }
                    else
                    {
                        <button class="btn-modern btn-primary-modern" type="submit">
                            <i class="bi bi-pencil-square me-2"></i>
                            Update Room
                        </button>
                    }
                    <button class="btn-modern btn-secondary-modern" type="button" @onclick="ClearForm">
                        <i class="bi bi-x-circle me-2"></i>
                        Clear
                    </button>
                </div>
            </EditForm>
        </div>
    </div>

    <div class="rooms-card mb-4">
        <div class="rooms-card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="bi bi-search me-2"></i>
                            Search Rooms
                        </label>
                        <div class="search-wrapper">
                            <i class="bi bi-search search-icon"></i>
                            <InputText class="form-control-modern search-input" @bind-Value="searchQuery" @oninput="FilterRooms" placeholder="Search by room name or type..." />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="bi bi-funnel me-2"></i>
                            Filter by Status
                        </label>
                        <InputSelect class="form-control-modern" @bind-Value="statusFilter" @onchange="FilterRooms">
                            <option value="">All Status</option>
                            <option value="Available">Available</option>
                            <option value="Not Available">Not Available</option>
                        </InputSelect>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn-modern btn-outline-modern w-100" type="button" @onclick="ClearFilters">
                        <i class="bi bi-arrow-counterclockwise me-2"></i>
                        Reset
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="rooms-card">
        <div class="rooms-card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="rooms-card-title">
                    <i class="bi bi-list-ul me-2"></i>
                    Room List
                    <span class="badge-modern">@filteredRoomList.Count</span>
                </h3>
            </div>
        </div>
        <div class="rooms-card-body">
            @if (filteredRoomList.Count == 0)
            {
                <div class="empty-state">
                    <i class="bi bi-inbox"></i>
                    <h4>No rooms found</h4>
                    <p>@(roomList.Count == 0 ? "Get started by adding your first room." : "Try adjusting your search or filter criteria.")</p>
                </div>
            }
            else
            {
                <div class="table-wrapper">
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>Room ID</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Capacity</th>
                                <th>Status</th>
                                <th>Description</th>
                                <th>Created At</th>
                                <th>Updated At</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var room in filteredRoomList)
                            {
                                <tr>
                                    <td><strong>#@room.Id</strong></td>
                                    <td>@room.RoomName</td>
                                    <td>
                                        <span class="badge-type">@room.RoomType</span>
                                    </td>
                                    <td>
                                        <span class="capacity-badge">
                                            <i class="bi bi-people me-1"></i>
                                            @room.Capacity
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge @(room.Status == "Available" ? "status-available" : "status-unavailable")">
                                            <i class="bi bi-circle-fill me-1"></i>
                                            @room.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="description-text" title="@room.Description">
                                            @(string.IsNullOrEmpty(room.Description) ? "-" : (room.Description.Length > 50 ? room.Description.Substring(0, 50) + "..." : room.Description))
                                        </span>
                                    </td>
                                    <td>@room.CreatedAt.ToString("MM/dd/yyyy")</td>
                                    <td>@room.UpdatedAt.ToString("MM/dd/yyyy")</td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn-action btn-edit" @onclick="() => EditRoom(room)" title="Edit">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn-action btn-delete" @onclick="() => DeleteRoom(room)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private RoomModel roomModel = new();
    private List<RoomModel> roomList = new();
    private List<RoomModel> filteredRoomList = new();
    private string searchQuery = string.Empty;
    private string statusFilter = string.Empty;

    private int nextId = 1;

    protected override void OnInitialized()
    {
        filteredRoomList = roomList;
    }

    private void SaveRoom()
    {
        if (roomModel.Id == 0)
        {
            roomModel.Id = nextId++;
            roomModel.CreatedAt = DateTime.Now;
            roomModel.UpdatedAt = DateTime.Now;
            roomList.Add(new RoomModel
            {
                Id = roomModel.Id,
                RoomName = roomModel.RoomName,
                RoomType = roomModel.RoomType,
                Capacity = roomModel.Capacity,
                Status = roomModel.Status,
                Description = roomModel.Description,
                CreatedAt = roomModel.CreatedAt,
                UpdatedAt = roomModel.UpdatedAt
            });
        }
        else
        {
            var existing = roomList.FirstOrDefault(r => r.Id == roomModel.Id);
            if (existing != null)
            {
                existing.RoomName = roomModel.RoomName;
                existing.RoomType = roomModel.RoomType;
                existing.Capacity = roomModel.Capacity;
                existing.Status = roomModel.Status;
                existing.Description = roomModel.Description;
                existing.UpdatedAt = DateTime.Now;
            }
        }

        ClearForm();
        FilterRooms();
    }

    private void EditRoom(RoomModel room)
    {
        roomModel = new RoomModel
        {
            Id = room.Id,
            RoomName = room.RoomName,
            RoomType = room.RoomType,
            Capacity = room.Capacity,
            Status = room.Status,
            Description = room.Description,
            CreatedAt = room.CreatedAt,
            UpdatedAt = room.UpdatedAt
        };
    }

    private void DeleteRoom(RoomModel room)
    {
        roomList.Remove(room);
        FilterRooms();
    }

    private void ClearForm()
    {
        roomModel = new RoomModel();
    }

    private void FilterRooms()
    {
        filteredRoomList = roomList.Where(room =>
            (string.IsNullOrEmpty(searchQuery) ||
             room.RoomName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
             room.RoomType.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(statusFilter) || room.Status == statusFilter)
        ).ToList();
    }

    private void ClearFilters()
    {
        searchQuery = string.Empty;
        statusFilter = string.Empty;
        FilterRooms();
    }

    public class RoomModel
    {
        public int Id { get; set; }
        public string RoomName { get; set; } = string.Empty;
        public string RoomType { get; set; } = string.Empty;
        public int Capacity { get; set; }
        public string Status { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public DateTime CreatedAt { get; set; } = DateTime.Now;
        public DateTime UpdatedAt { get; set; } = DateTime.Now;
    }
}


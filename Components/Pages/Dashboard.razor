@page "/dashboard"

<div class="dashboard-container">
    <div class="dashboard-header mb-4">
        <h1 class="dashboard-title">Welcome back!</h1>
        <p class="dashboard-subtitle">Here's what's happening with your room reservations today.</p>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="stat-card">
                <div class="stat-card-icon" style="background-color: #667eea;">
                    <i class="bi bi-door-closed"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-value">@totalRooms</h3>
                    <p class="stat-card-label">Total Rooms</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card">
                <div class="stat-card-icon" style="background-color: #f5576c;">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-value">@activeReservations</h3>
                    <p class="stat-card-label">Active Reservations</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card">
                <div class="stat-card-icon" style="background-color: #4facfe;">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-value">@totalCapacity</h3>
                    <p class="stat-card-label">Total Capacity</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card">
                <div class="stat-card-icon" style="background-color: #10b981;">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-value">@availableRooms</h3>
                    <p class="stat-card-label">Available Rooms</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <h5 class="dashboard-card-title">
                        <i class="bi bi-lightning-charge me-2"></i>
                        Quick Actions
                    </h5>
                </div>
                <div class="dashboard-card-body">
                    <div class="quick-actions">
                        <button class="quick-action-btn" @onclick="NavigateToRooms">
                            <div class="quick-action-icon" style="background-color: #667eea;">
                                <i class="bi bi-plus-circle"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6>Add New Room</h6>
                                <p>Create a new room entry</p>
                            </div>
                            <i class="bi bi-chevron-right quick-action-arrow"></i>
                        </button>
                        <button class="quick-action-btn" @onclick="NavigateToReservations">
                            <div class="quick-action-icon" style="background-color: #f5576c;">
                                <i class="bi bi-calendar-plus"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6>New Reservation</h6>
                                <p>Book a room reservation</p>
                            </div>
                            <i class="bi bi-chevron-right quick-action-arrow"></i>
                        </button>
                        <button class="quick-action-btn" @onclick="NavigateToRooms">
                            <div class="quick-action-icon" style="background-color: #4facfe;">
                                <i class="bi bi-list-ul"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6>View All Rooms</h6>
                                <p>Manage your room inventory</p>
                            </div>
                            <i class="bi bi-chevron-right quick-action-arrow"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <h5 class="dashboard-card-title">
                        <i class="bi bi-clock-history me-2"></i>
                        Recent Activity
                    </h5>
                </div>
                <div class="dashboard-card-body">
                    <div class="activity-list">
                        @if (recentActivities.Any())
                        {
                            @foreach (var activity in recentActivities)
                            {
                                <div class="activity-item">
                                    <div class="activity-icon" style="background-color: @activity.IconColor;">
                                        <i class="@activity.Icon"></i>
                                    </div>
                                    <div class="activity-content">
                                        <h6>@activity.Title</h6>
                                        <p>@activity.Description</p>
                                        <span class="activity-time">@activity.Time</span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="bi bi-inbox"></i>
                                <p>No recent activity</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] NavigationManager NavigationManager { get; set; } = default!;

    private int totalRooms = 12;
    private int activeReservations = 8;
    private int totalCapacity = 150;
    private int availableRooms = 4;

    private List<ActivityItem> recentActivities = new();

    protected override void OnInitialized()
    {
        recentActivities = new List<ActivityItem>
        {
            new ActivityItem
            {
                Title = "New Room Added",
                Description = "Conference Room A was added to the system",
                Time = "2 hours ago",
                Icon = "bi bi-door-closed",
                IconColor = "#667eea"
            },
            new ActivityItem
            {
                Title = "Reservation Created",
                Description = "Meeting room booked for tomorrow",
                Time = "5 hours ago",
                Icon = "bi bi-calendar-check",
                IconColor = "#f5576c"
            },
            new ActivityItem
            {
                Title = "Room Updated",
                Description = "Room capacity updated for Room 101",
                Time = "1 day ago",
                Icon = "bi bi-pencil-square",
                IconColor = "#4facfe"
            }
        };
    }

    private void NavigateToRooms()
    {
        NavigationManager.NavigateTo("/rooms");
    }

    private void NavigateToReservations()
    {
        NavigationManager.NavigateTo("/reservations");
    }

    private class ActivityItem
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Time { get; set; } = string.Empty;
        public string Icon { get; set; } = string.Empty;
        public string IconColor { get; set; } = "#667eea";
    }
}


                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Inject] NavigationManager NavigationManager { get; set; } = default!;

    private int totalRooms = 0;
    private int availableRooms = 0;
    private int pendingReservations = 0;
    private int confirmedReservations = 0;

    private List<ActivityItem> recentActivities = new();
    private List<Room> allRooms = new();
    private List<Reservation> allReservations = new();
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardDataAsync();
    }

    private async Task LoadDashboardDataAsync()
    {
        try
        {
            isLoading = true;
            
            allRooms = await RoomService.GetAllRoomsAsync();
            allReservations = await ReservationService.GetAllReservationsAsync();
            
            totalRooms = allRooms.Count;
            availableRooms = allRooms.Count(r => r.Status == "Available");
            pendingReservations = allReservations.Count(r => r.Status == "Pending");
            confirmedReservations = allReservations.Count(r => r.Status == "Confirmed");
            
            await LoadRecentActivitiesAsync();
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadRecentActivitiesAsync()
    {
        try
        {
            recentActivities = new List<ActivityItem>();
            
            var recentReservations = allReservations
                .OrderByDescending(r => r.CreatedAt)
                .Take(5)
                .ToList();
            
            var recentRooms = allRooms
                .OrderByDescending(r => r.CreatedAt)
                .Take(3)
                .ToList();
            
            var activitiesWithDate = new List<(ActivityItem Activity, DateTime Date)>();
            
            foreach (var reservation in recentReservations)
            {
                var timeAgo = GetTimeAgo(reservation.CreatedAt);
                activitiesWithDate.Add((
                    new ActivityItem
                    {
                        Title = "Reservation Created",
                        Description = $"Reservation for {reservation.CustomerName} - Room: {reservation.RoomName}",
                        Time = timeAgo,
                        Icon = "bi bi-calendar-check",
                        IconColor = reservation.Status == "Confirmed" ? "#10b981" : 
                                   reservation.Status == "Pending" ? "#f59e0b" : 
                                   reservation.Status == "Cancelled" ? "#ef4444" : "#667eea"
                    },
                    reservation.CreatedAt
                ));
            }
            
            foreach (var room in recentRooms)
            {
                var timeAgo = GetTimeAgo(room.CreatedAt);
                activitiesWithDate.Add((
                    new ActivityItem
                    {
                        Title = "Room Added",
                        Description = $"{room.RoomName} ({room.RoomType}) was added to the system",
                        Time = timeAgo,
                        Icon = "bi bi-door-closed",
                        IconColor = "#667eea"
                    },
                    room.CreatedAt
                ));
            }
            
            recentActivities = activitiesWithDate
                .OrderByDescending(a => a.Date)
                .Take(5)
                .Select(a => a.Activity)
                .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading recent activities: {ex.Message}");
        }
    }

    private string GetTimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.Now - dateTime;
        
        if (timeSpan.TotalMinutes < 1)
            return "Just now";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} minute{(timeSpan.TotalMinutes >= 2 ? "s" : "")} ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} hour{(timeSpan.TotalHours >= 2 ? "s" : "")} ago";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} day{(timeSpan.TotalDays >= 2 ? "s" : "")} ago";
        if (timeSpan.TotalDays < 30)
        {
            var weeks = (int)(timeSpan.TotalDays / 7);
            return $"{weeks} week{(weeks >= 2 ? "s" : "")} ago";
        }
        if (timeSpan.TotalDays < 365)
        {
            var months = (int)(timeSpan.TotalDays / 30);
            return $"{months} month{(months >= 2 ? "s" : "")} ago";
        }
        
        var years = (int)(timeSpan.TotalDays / 365);
        return $"{years} year{(years >= 2 ? "s" : "")} ago";
    }

    private void NavigateToRooms()
    {
        NavigationManager.NavigateTo("/rooms");
    }

    private void NavigateToReservations()
    {
        NavigationManager.NavigateTo("/reservations");
    }

    private class ActivityItem
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Time { get; set; } = string.Empty;
        public string Icon { get; set; } = string.Empty;
        public string IconColor { get; set; } = "#667eea";
    }
}


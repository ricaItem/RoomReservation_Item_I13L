        align-items: center;
        justify-content: center;
    }

    .social-btn:hover {
        border-color: #667eea;
        color: #667eea;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
    }

    .login-footer {
        text-align: center;
        color: #6b7280;
        font-size: 0.875rem;
    }

    .signup-link {
        color: #667eea;

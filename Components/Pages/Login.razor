@page "/login"

<div class="login-page">
    <div class="login-container">

        <div class="login-left">
            <div class="login-left-content">
                <div class="login-brand">
                    <img src="images/logo.png" alt="RoomEase" class="login-logo" />
                    <h1 class="login-brand-title">RoomEase</h1>
                </div>
                <div class="login-illustration">
                    <div class="floating-shapes">
                        <div class="shape shape-1"></div>
                        <div class="shape shape-2"></div>
                        <div class="shape shape-3"></div>
                    </div>
                    <div class="illustration-content">
                        <i class="bi bi-shield-check illustration-icon"></i>
                        <h2>Welcome Back!</h2>
                        <p>Sign in to manage your rooms and reservations</p>
                    </div>
                </div>
            </div>
        </div>

   
        <div class="login-right">
            <div class="login-form-container">
                <div class="login-form-header">
                    <h2 class="login-title">Sign In</h2>
                    <p class="login-subtitle">Enter your credentials to access your account</p>
                </div>

                <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="validation-summary" />

                    <div class="form-group">
                        <div class="input-wrapper">
                            <i class="bi bi-envelope input-icon"></i>
                            <InputText class="form-input" @bind-Value="loginModel.Email" placeholder=" " />
                            <label class="input-label">Email Address</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-wrapper">
                            <i class="bi bi-lock input-icon"></i>
                            <InputText type="password" class="form-input" @bind-Value="loginModel.Password" placeholder=" " />
                            <label class="input-label">Password</label>
                        </div>
                    </div>

                    <div class="form-options">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">
                                Remember me
                            </label>
                        </div>
                        <a href="#" class="forgot-password">Forgot password?</a>
                    </div>

                    <button class="btn-login" type="submit">
                        <span>Sign In</span>
                        <i class="bi bi-arrow-right"></i>
                    </button>
                </EditForm>

                @if (errorMessage != null)
                {
                    <div class="alert-error">
                        <i class="bi bi-exclamation-circle"></i>
                        <span>@errorMessage</span>
                    </div>
                }

                <div class="login-divider">
                    <span>Or continue with</span>
                </div>

                <div class="social-login">
                    <button class="social-btn" type="button">
                        <i class="bi bi-google"></i>
                    </button>
                    <button class="social-btn" type="button">
                        <i class="bi bi-microsoft"></i>
                    </button>
                    <button class="social-btn" type="button">
                        <i class="bi bi-github"></i>
                    </button>
                </div>

                <div class="login-footer">
                    <p>Don't have an account? <a href="#" class="signup-link">Sign up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string? errorMessage;

    [Inject] NavigationManager NavigationManager { get; set; } = default!;

    private void HandleLogin()
    {
        if (loginModel.Email == "admin@example.com" && loginModel.Password == "1234")
        {
            NavigationManager.NavigateTo("/dashboard");
        }
        else
        {
            errorMessage = "Invalid email or password.";
        }
    }

    public class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}

<style>

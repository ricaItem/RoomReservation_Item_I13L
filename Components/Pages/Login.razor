            padding: 1.5rem;
        }

        .login-form-header {
            margin-bottom: 2rem;
        }

        .login-title {
            font-size: 1.5rem;
        }

        .social-login {
            gap: 0.75rem;
        }

        .social-btn {
            width: 44px;
            height: 44px;
            font-size: 1.125rem;
        }
    }

    
    @@media (min-width: 1400px) {
        .login-container {
            max-width: 1400px;
        }

        .login-left {
            padding: 4rem;
        }

        .login-right {
            padding: 4rem;
        }
    }


    @@media (min-width: 1920px) {
        .login-container {
            max-width: 1600px;
        }
    }
</style>

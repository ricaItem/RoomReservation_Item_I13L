        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        position: relative;
        z-index: 1;
        min-height: 700px;
    }


    .login-left {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
